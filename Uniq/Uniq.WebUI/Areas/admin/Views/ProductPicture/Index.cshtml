@model List<ProductPicture>

<div class="body-wrapper">
    <div class="container-fluid">
        <!-- --------------------------------------------------- -->
        <!--  Form Basic Start -->
        <!-- --------------------------------------------------- -->
        <div class="card bg-light-info shadow-none position-relative overflow-hidden">
            <div class="card-body px-4 py-3">
                <div class="row align-items-center">
                    <div class="col-9">
                        <h4 class="fw-semibold mb-8">Ürünün Resimleri</h4>
                        <a asp-area="admin" asp-controller="ProductPicture" asp-action="Add" asp-route-productid="@ViewBag.ProductID" class="btn btn-success btn-lg">Yeni Ürün Resmi Ekle</a>
                    </div>
                    <div class="col-3">
                        <div class="text-center mb-n5">
                            <img src="/assetsAdmin/dist/images/breadcrumb/ChatBc.png" alt="" class="img-fluid mb-n4">
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="row">
            <div class="col-12">
                <!-- ---------------------
                                    start Individual column searching (text inputs)
                                ---------------- -->
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive" style="overflow-x: auto;position:relative;overflow-y: hidden !important;">
                            <table class="table table-striped table-bordered border text-inputs-searching text-nowrap">
                                <thead>
                                    <!-- start row -->
                                    <tr>
                                        <th>Ürünün Resmi</th>
                                        <th>Resmin Adı</th>
                                        <th>Görüntülenme Sırası</th>
                                        <th>Düzenle</th>
                                    </tr>
                                    <!-- end row -->
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <!-- start row -->
                                        <tr>
                                            <td> <img width="130" src="@item.Picture" /></td>
                                            <td>@item.Name</td>
                                            <td>@item.DisplayIndex</td>
                                            <td>
                                                <div class="dropdown dropstart">
                                                    <a href="#" class="text-muted" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="ti ti-dots-vertical fs-6"></i>
                                                    </a>
                                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                        <li>
                                                            <a asp-area="admin" asp-controller="ProductPicture" asp-action="Update" asp-route-id="@item.Id" class="dropdown-item d-flex align-items-center gap-3"><i class="fs-4 ti ti-edit"></i>Güncelle</a>
                                                        </li>
                                                        <li>
                                                            <button onclick="confirmDeleteProductPicture(@item.Id)" class="dropdown-item d-flex align-items-center gap-3"><i class="fs-4 ti ti-trash"></i>Sil</button>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                        <!-- end row -->
                                    }
                                </tbody>
                                <tfoot>
                                    <!-- start row -->
                                    <tr>
                                        <th>Ürünün Resmi</th>
                                        <th>Resmin Adı</th>
                                        <th>Görüntülenme Sırası</th>
                                        <th style="display:none;"></th>
                                    </tr>
                                    <!-- end row -->
                                </tfoot>
                            </table>

                        </div>
                    </div>
                </div>
                <!-- ---------------------
                                    end Individual column searching (text inputs)
                                ---------------- -->
            </div>
        </div>

    </div>
</div>
