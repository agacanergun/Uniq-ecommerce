@using Uniq.WebUI.Areas.admin.ViewModels;
@model ProductIndexVM

<div class="body-wrapper">
    <div class="container-fluid">
        <div class="col-12">
            <!-- ---------------------
                                start Project Assinging
                            ---------------- -->
            <div class="card">
                <form asp-area="admin" asp-controller="Product" asp-action="Add" class="form-horizontal r-separator">
                    <div class="card-body">
                        <h5>Ürün Ekle</h5>
                        <div class="form-group row align-items-center mb-0">
                            <label asp-for="@Model.Product.Title" for="inputEmail3" class="col-3 text-end control-label col-form-label"></label>
                            <div class="col-9 border-start pb-2 pt-2">
                                <input required asp-for="@Model.Product.Title" type="text" class="form-control" id="inputEmail3">
                            </div>
                        </div>
                        <div class="form-group row align-items-center mb-0">
                            <label asp-for="@Model.Product.ShortDescription" for="inputEmail3" class="col-3 text-end control-label col-form-label"></label>
                            <div class="col-9 border-start pb-2 pt-2">
                                <input required asp-for="@Model.Product.ShortDescription" type="text" class="form-control" id="inputEmail3">
                            </div>
                        </div>
                        <div class="form-group row align-items-center mb-0">
                            <label asp-for="@Model.Product.Description" for="inputEmail3" class="col-3 text-end control-label col-form-label"></label>
                            <div class="col-9 border-start pb-2 pt-2">
                                <input required asp-for="@Model.Product.Description" type="text" class="form-control" id="inputEmail3">
                            </div>
                        </div>
                        <div class="form-group row align-items-center mb-0">
                            <label asp-for="@Model.Product.DisplayIndex" for="inputEmail3" class="col-3 text-end control-label col-form-label"></label>
                            <div class="col-9 border-start pb-2 pt-2">
                                <input required asp-for="@Model.Product.DisplayIndex" type="number" class="form-control" id="inputEmail3">
                            </div>
                        </div>
                        <div class="form-group row align-items-center mb-0">
                            <label asp-for="@Model.Product.Price" for="inputEmail3" class="col-3 text-end control-label col-form-label"></label>
                            <div class="col-9 border-start pb-2 pt-2">
                                <input required asp-for="@Model.Product.Price" type="text" class="form-control" id="inputEmail3">
                            </div>
                        </div>
                        <div class="form-group row align-items-center mb-0">
                            <label asp-for="@Model.Product.DiscountRate" for="inputEmail3" class="col-3 text-end control-label col-form-label"></label>
                            <div class="col-9 border-start pb-2 pt-2">
                                <input required asp-for="@Model.Product.DiscountRate" type="number" class="form-control" id="inputEmail3">
                            </div>
                        </div>
                        <div class="form-group row align-items-center mb-0">
                            <label asp-for="@Model.Product.SuggestedUnique" for="inputEmail3" class="col-3 text-end control-label col-form-label"></label>
                            <div class="col-9 border-start pb-2 pt-2">
                                <input asp-for="@Model.Product.SuggestedUnique" type="checkbox" class="form-check-input" id="customCheck1">
                            </div>
                        </div>
                        <div class="form-group row align-items-center mb-0">
                            <label asp-for="@Model.Product.ShowOnMainPage" for="inputEmail3" class="col-3 text-end control-label col-form-label"></label>
                            <div class="col-9 border-start pb-2 pt-2">
                                <input asp-for="@Model.Product.ShowOnMainPage" type="checkbox" class="form-check-input" id="customCheck1">
                            </div>
                        </div>
                        @if (@Model.categories.Count() > 0)
                        {

                            @for (int i = 0; i < Model.categories.Count(); i++)
                            {
                                <div class="form-group row align-items-center mb-0">
                                    <label asp-for="@Model.Product.ProductCategories" for="inputEmail3" class="col-3 text-end control-label col-form-label"></label>
                                    <div class="col-9 border-start pb-2 pt-2">
                                        <input class="form-check-input" type="checkbox" id="category_@Model.categories[i].ID" value="@Model.categories[i].ID" name="CategoriyIDs" /><label for="category_@Model.categories[i].ID">@Model.categories[i].Name</label>
                                    </div>
                                </div>
                            }

                        }

                    </div>
                    <div class="card-body">
                        <div class="form-group mb-0 text-end">
                            @if (ViewBag.Error != null)
                            {
                                <p class="text-center">@ViewBag.Error</p>
                            }
                            <a asp-area="admin" asp-controller="Product" asp-action="Index" class="btn btn-dark rounded-pill px-4 waves-effect waves-light">
                                İptal
                            </a>
                            <button class="btn btn-success btn-lg rounded-pill px-4 waves-effect waves-light">
                                Ekle
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- ---------------------
                                end Project Assinging
                            ---------------- -->
        </div>
    </div>
</div>