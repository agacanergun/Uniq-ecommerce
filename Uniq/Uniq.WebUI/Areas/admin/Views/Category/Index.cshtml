@model List<Category>

<div class="body-wrapper">
    <div class="container-fluid">
        <!-- --------------------------------------------------- -->
        <!--  Form Basic Start -->
        <!-- --------------------------------------------------- -->
        <div class="card bg-light-info shadow-none position-relative overflow-hidden">
            <div class="card-body px-4 py-3">
                <div class="row align-items-center">
                    <div class="col-9">
                        <h4 class="fw-semibold mb-8">Kategoriler</h4>
                        <a asp-area="admin" asp-controller="Category" asp-action="Add" class="btn btn-success btn-lg">Yeni Kategori Ekle</a>
                    </div>
                    <div class="col-3">
                        <div class="text-center mb-n5">
                            <img src="/assetsAdmin/dist/images/breadcrumb/ChatBc.png" alt="" class="img-fluid mb-n4">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card w-100 position-relative overflow-hidden">
            <div class="card-body p-4">
                <div class="table-responsive rounded-2 mb-4">
                    <table class="table border text-nowrap customize-table mb-0 align-middle">
                        <thead class="text-dark fs-4">
                            <tr>
                                <th><h6 class="fs-4 fw-semibold mb-0">Kategori Adı</h6></th>
                                <th><h6 class="fs-4 fw-semibold mb-0">Görüntülenme Sırası</h6></th>
                                <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <h6 class="fs-4 fw-semibold mb-0">@item.Name</h6>
                                        </div>
                                    </td>
                                    <td>
                                        <h6 class="fs-4 fw-semibold mb-0">@item.DisplayIndex</h6>
                                    </td>
                                    <td>
                                        <div class="dropdown dropstart">
                                            <a href="#" class="text-muted" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="ti ti-dots-vertical fs-6"></i>
                                            </a>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <li>
                                                    <a asp-area="admin" asp-controller="Category" asp-action="Update" asp-route-id="@item.ID" class="dropdown-item d-flex align-items-center gap-3"><i class="fs-4 ti ti-edit"></i>Edit</a>
                                                </li>
                                                <li>
                                                    <a asp-area ="admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.ID" class="dropdown-item d-flex align-items-center gap-3"><i class="fs-4 ti ti-trash"></i>Delete</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                        <br />
                    </table>
                </div>
            </div>
        </div>
        <!-- --------------------------------------------------- -->
        <!--  Form Basic End -->
        <!-- --------------------------------------------------- -->
    </div>
</div>