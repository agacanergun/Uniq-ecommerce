@{
    Layout = null;
}

@model Admin
<!DOCTYPE html>
<html lang="tr">
<head>
    <!-- Title -->
    <title>Mordenize</title>
    <!-- Required Meta Tag -->
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="handheldfriendly" content="true" />
    <meta name="MobileOptimized" content="width" />
    <meta name="description" content="Mordenize" />
    <meta name="author" content="" />
    <meta name="keywords" content="Mordenize" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/png" href="/assetsAdmin/dist/images/logos/favicon.png" />
    <!-- Owl Carousel -->
    <link rel="stylesheet" href="/assetsAdmin/dist/libs/owl.carousel/dist/assets/owl.carousel.min.css">
    <!-- Core Css -->
    <link id="themeColors" rel="stylesheet" href="/assetsAdmin/dist/css/style.min.css" />
</head>
<body>
    <!-- Preloader -->
    <div class="preloader">
        <img src="/assetsAdmin/dist/images/logos/favicon.png" alt="loader" class="lds-ripple img-fluid" />
    </div>
    <!-- Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="horizontal" data-navbarbg="skin6" data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden radial-gradient min-vh-100">
            <div class="position-relative z-index-5">
                <div class="row">
                    <div class="col-xl-7 col-xxl-8">
                        <div class="d-none d-xl-flex align-items-center justify-content-center" style="height: calc(100vh - 80px);">
                            <img src="https://demos.adminmart.com/premium/bootstrap/modernize-bootstrap/package/dist/images/backgrounds/login-security.svg" alt="" class="img-fluid" width="500">
                        </div>
                    </div>
                    <div class="col-xl-5 col-xxl-4">
                        <div class="authentication-login min-vh-100 bg-body row justify-content-center align-items-center p-4">
                            <div class="col-sm-8 col-md-6 col-xl-9">
                                <h2 class="mb-3 fs-7 fw-bolder text-center">UNİQUE ADMİN PANEL</h2>
                                <br />
                                <form class="text-center" method="post" asp-area="admin" asp-controller="Home" asp-action="Index">
                                    <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1" class="form-label">Kullanıcı Adı</label>
                                        <input type="text" class="form-control" asp-for="@Model.UserName">
                                    </div>
                                    <div class="mb-4">
                                        <label for="exampleInputPassword1" class="form-label">Şifre</label>
                                        <input type="password" class="form-control" id="exampleInputPassword1" asp-for="@Model.Password">

                                    </div>
                                    @if (ViewBag.Error != null)
                                    {
                                        <span style="color:red">@ViewBag.Error</span>
                                        <br />
                                        <br />
                                    }
                                    <button class="btn btn-primary w-100 py-8 mb-4 rounded-2">Giriş Yap</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Import Js Files -->
    <script src="/assetsAdmin/dist/libs/jquery/dist/jquery.min.js"></script>
    <script src="/assetsAdmin/dist/libs/simplebar/dist/simplebar.min.js"></script>
    <script src="/assetsAdmin/dist/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- core files -->
    <script src="/assetsAdmin/dist/js/app.min.js"></script>
    <script src="/assetsAdmin/dist/js/app.horizontal.init.js"></script>
    <script src="/assetsAdmin/dist/js/app-style-switcher.js"></script>
    <script src="/assetsAdmin/dist/js/sidebarmenu.js"></script>

    <script src="/assetsAdmin/dist/js/custom.js"></script>
    <!-- current page js files -->
    <script src="/assetsAdmin/dist/libs/owl.carousel/dist/owl.carousel.min.js"></script>
</body>
</html>