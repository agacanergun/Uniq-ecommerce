@using Uniq.WebUI.ViewModels;
@model FooterVM

<!-- Document Footer Start -->
<footer class="footer-document footer-document2 footer-document4 ratio_asos mb-xxl dark-footer">
    <div class="bg-footer-l">
        <img src="/assets/images/bag/banner/bg-footer-l.png" alt="banner" />
    </div>
    <div class="bg-footer-r">
        <img src="/assets/images/bag/banner/bg-footer-r.png" alt="banner" />
    </div>
    <div>
        <div class="container-lg">
            <div class="main-footer">
                <div class="row gy-3 gy-md-4 gy-xl-0">
                    <div class="col-2"></div>

                    <div class="col-xl-3 col-lg-4 col-md-6">

                        <div class="content-box">
                            <h5 class="heading-footer line-style">İletisim</h5>
                            <ul>
                                @foreach (var item in Model.Communications)
                                {
                                    <li><i data-feather="@item.Type"></i> <span> @item.Info </span></li>
                                }

                            </ul>
                            <img class="logo" width="15" src="/assets/images/logos/logo.png" alt="logo-white" />
                        </div>
                    </div>

                    <div class="nav-footer col-lg-2 col-md-4 order-md-3 order-lg-2">
                        <div class="nav content-box d-md-block">
                            <h5 class="heading-footer line-style">Müşteri Hizmetleri</h5>
                            <ul>
                                @foreach (var item in Model.CustomerServiceInstitutionals)
                                {
                                    if (item.Type == "Kurumsal")
                                    {
                                        <li><a class="nav" asp-controller="Home" asp-action="CSIDetail" asp-route-id="@item.ID" asp-route-title="@item.Title">@item.Title</a></li>
                                    }

                                }
                            </ul>
                        </div>
                    </div>
                    <div class="nav-footer col-xl-2 col-lg-3 col-md-4 order-md-5 order-lg-4">
                        <div class="nav d-md-block content-box">
                            <h5 class="heading-footer line-style">Kurumsal</h5>
                            <ul>
                                @foreach (var item in Model.CustomerServiceInstitutionals)
                                {
                                    if (item.Type == "Müşteri Hizmetleri")
                                    {
                                        <li><a class="nav" asp-controller="Home" asp-action="CSIDetail" asp-route-id="@item.ID" asp-route-title="@item.Title">@item.Title</a></li>
                                    }

                                }
                            </ul>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 col-lg-4 order-md-2 order-lg-5">
                        <div class="content-box">
                            <h5 class="heading-footer line-style">Sosyal Medya</h5>
                            <div class="follow-wrap">
                                <ul>
                                    <li>
                                        <a target="_blank" href="@Model.SocialMedia.InstagramLink"><i class="fab fa-instagram"></i></a>
                                    </li>
                                    <li>
                                        <a target="_blank" href="@Model.SocialMedia.FacebookLink"><i class="fab fa-facebook"></i></a>
                                    </li>
                                    <li>
                                        <a target="_blank" href="@Model.SocialMedia.Twitterink"><i class="fab fa-twitter"></i></a>
                                    </li>
                                    <li>
                                        <a target="_blank" href="@Model.SocialMedia.YoutubeLink"><i class="fab fa-youtube"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="sub-footer">
                <div class="row gy-3">
                    <div class="col-md-6">
                        <ul>
                            <li>
                                <a href="javascript:void(0)"> <img src="/assets/icons/png/1.png" class="img-fluid blur-up lazyload" alt="payment icon" /></a>
                            </li>
                            <li>
                                <a href="javascript:void(0)"> <img src="/assets/icons/png/2.png" class="img-fluid blur-up lazyload" alt="payment icon" /></a>
                            </li>
                            <li>
                                <a href="javascript:void(0)"> <img src="/assets/icons/png/3.png" class="img-fluid blur-up lazyload" alt="payment icon" /></a>
                            </li>
                            <li>
                                <a href="javascript:void(0)"> <img src="/assets/icons/png/4.png" class="img-fluid blur-up lazyload" alt="payment icon" /></a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-0">© 2022, OSLO Template. Made with heart by Pixelstrap</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
<!-- Document Footer End -->