@using Uniq.DAL.Entities;
@using Uniq.WebUI.Tools;
@model Product
<div class="col wow fadeInUp" data-wow-delay="0.5s">
    <div style=" border-radius:8px;" class="product-card product-card5">
        <div class="img-box">
            <a asp-controller="Product" asp-action="Index" asp-route-name="@GeneralTool.URLConverter(Model.Title)" asp-route-id="@Model.ID" class="primary-img"><img class="img-fluid bg-img" src="@Model.ProductPictures.FirstOrDefault().Picture" alt="product" /> </a>

            <!-- Arrow label -->
            <span class="arrow-label-wrap"> <span style="background-color:#dc9749;" class="arrow-label">@Model.DiscountRate% İndirimde</span> </span>
            <span style="margin-top:40px;" class="arrow-label-wrap"> <span style="background-color:red" class="arrow-label"><s>@Model.Price TL</s></span> </span>
            <!-- Option -->
            <ul class="option-wrap">
                <li data-bs-toggle="tooltip" data-bs-placement="left" title="My Wishlist">
                    <a href="javascript:void(0)" class="wishlist-btn">
                        <i data-feather="heart"></i>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Content Box -->
        <div class="content-box">
            <a href="product.html">
                <h5>@Model.Title</h5>
                <hr />
                <h5>@Model.ShortDescription</h5>
            </a>
            <hr />
            <div class="thumb-wrapper">
                <span><h4>@Model.DiscountedPrice TL</h4></span>
            </div>
        </div>
    </div>
</div>

