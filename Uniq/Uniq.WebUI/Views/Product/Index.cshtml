@using Uniq.WebUI.ViewModels;
@model ProductDetailVM

<main class="main">
    <!-- Product Section Start -->
    <section class="product-page">
        <div class="container-lg">
            <div class="row g-3 g-xl-4 view-product">
                <div class="col-md-7">
                    <div class="slider-box sticky off-50 position-sticky">
                        <div class="row g-2">
                            <div class="col-2">
                                <div class="thumbnail-box">
                                    <div class="swiper thumbnail-img-box thumbnailSlider2 swiper-initialized swiper-vertical swiper-pointer-events swiper-backface-hidden swiper-thumbs">
                                        <div class="swiper-wrapper" id="swiper-wrapper-8973b70119d357cf" aria-live="polite" style="transform: translate3d(0px, 0px, 0px); transition-duration: 0ms;">

                                            @foreach (var item in Model.Product.ProductPictures)
                                            {
                                                <div class="swiper-slide swiper-slide-active swiper-slide-visible" role="group" aria-label="1 / 5" style="height: 125px; margin-bottom: 8px;">
                                                    <img src="@item.Picture" alt="img">
                                                </div>
                                            }


                                        </div>
                                        <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-10 ratio_square">
                                <div class="swiper mainslider2 swiper-initialized swiper-horizontal swiper-pointer-events swiper-backface-hidden">
                                    <div class="swiper-wrapper" id="swiper-wrapper-210e4c87fbe2ea869" aria-live="polite" style="transform: translate3d(-1977px, 0px, 0px); transition-duration: 0ms;">

                                        @foreach (var item in Model.Product.ProductPictures)
                                        {
                                            <div class="swiper-slide bg-size" role="group" aria-label="1 / 5" style="background-size: cover; background-position: center center; background-repeat: no-repeat; display: block; width: 659px;">
                                                <img class="bg-img" src="@item.Picture" alt="img" style="display: none;">
                                            </div>
                                        }
                                    </div>
                                    <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-5">
                    <div class="product-detail-box">
                        <div class="product-option">
                            <h2 style="color:white;">@Model.Product.Title</h2>

                            <div class="option price"><span style="color:white;"> @Model.Product.DiscountedPrice TL </span> <del>@Model.Product.Price TL</del></div>

                            <div class="option">
                                <p style="color:white;">
                                    @Model.Product.ShortDescription
                                </p>
                            </div>

                            <div class="option-side">
                                <div class="option">
                                    <div class="title-box4">
                                    </div>
                                    <div class="plus-minus">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-minus sub"><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                                        <input type="number" value="1" min="1" max="10">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus add"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                                    </div>
                                </div>
                            </div>

                            <div class="btn-group">
                                <a href="javascript:void(0)" class="btn-solid btn-sm addtocart-btn">Add To Cart </a>
                                <a href="javascript:void(0)" class="btn-outline btn-sm wishlist-btn">Add To Wishlist</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <hr style="color:white;" />
            <!-- Tabs Start -->
            <div class="description-box">
                <div class="row gy-4">
                    <div class="col-12">
                    </div>

                    <div style="color:white;font-size:xx-large;" class="col-12">


                        @Html.Raw(Model.Product.Description)



                    </div>
                </div>
            </div>
            <!-- Tabs End -->
        </div>
    </section>
    <!-- Product Section End -->
    <!-- New Arrived Section Start -->
    <section class="pt-0 ratio_asos">
        <div class="container-lg">
            <div class="latest-products">
                <div class="row g-2 g-sm-3 g-xl-4 row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-xl-5">
                    @foreach (var item in Model.ReleatedProducts)
                    {
                        <partial name="_product" model="item" />
                    }
                </div>
            </div>
        </div>
    </section>
    <!-- New Arrived Section End -->
</main>